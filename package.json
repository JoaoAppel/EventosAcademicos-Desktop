{
  "name": "events-desktop-app",
  "version": "0.1.0",
  "description": "Desktop Portaria & Relat√≥rios para Events Backend (check-in QR, offline sync, export)",
  "main": "main.js",
  "author": "Weliton + ChatGPT",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "dev": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "dependencies": {
    "axios": "^1.7.2",
    "electron-store": "^9.0.0",
    "jsqr": "^1.4.0",
    "xlsx": "^0.18.5",
    "jspdf": "^2.5.1",
    "serialport": "^12.0.0",
    "idb-keyval": "^6.2.1"
  },
  "devDependencies": {
    "electron": "^31.2.0",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.example.events.desktop",
    "productName": "Events Desktop",
    "files": [
      "!**/.gitkeep",
      "!**/*.map",
      "!**/node_modules/.cache/**",
      "!**/node_modules/electron/**",
      "!**/node_modules/electron-builder/**"
    ],
    "directories": {
      "buildResources": "build"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        },
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ],
      "certificateFile": null,
      "certificatePassword": null,
      "signingHashAlgorithms": ["sha256"],
      "sign": null
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Events Desktop"
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "category": "public.app-category.productivity",
      "identity": null,
      "sign": null
    },
    "dmg": {
      "contents": [
        {
          "x": 110,
          "y": 150,
          "type": "file"
        },
        {
          "x": 240,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Utility"
    }
  }
}